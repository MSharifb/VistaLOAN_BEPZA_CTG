
@{
    ViewBag.Title = "Index";
}

@using (Html.BeginForm("Create", "DummyTest", FormMethod.Post, new { id = "frm", @encType = "multipart/form-data" }))
{
    <div class="col-md-8">
        <fieldset>
            <legend>Basic Info</legend>

            <div class="form-horizontal">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" class="form-control" id="name">
                </div>
                <div class="form-group">
                    <label for="city">City:</label>
                    <input type="text" class="form-control" id="city">
                </div>
            </div>
        </fieldset>
        <button id="btnSubmit" class="btn btn-primary"><i class="fa fa-file"></i> Save</button>
    </div>
}

<script type="text/javascript">

    $('#btnSubmit').on('click', function (e) {
        //e.preventDefault();
        var model = {};
            model.Name = $('#name').val(),
            model.City = $('#city').val()
        //alert("Name: "+vm.Name +" City: "+vm.City);
       // debugger;

        $.ajax({
            type: "post",
            url: "@Url.Action("Create", "DummyTest")",
            data: JSON.stringify(model),
            dataType: 'json',
            contentType: 'application/json; charset=utf-8',                      
            success: function () {
                //alert("success");
            },
            error: function (data) {
                //alert(data.x);
            }
        });

    });
</script>
