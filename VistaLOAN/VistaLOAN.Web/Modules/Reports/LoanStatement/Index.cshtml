@model VistaLOAN.Modules.Reports.ReportSearchViewModel
@{
    ViewBag.Title = "Loan Statement";
}

<!-- general form elements -->
<div class="box box-primary">
    <div class="box-header with-border grid-title">
        <div class="title-text">Loan Statement</div>
    </div><!-- /.box-header -->
    <!-- form start -->
    @using (Html.BeginForm("Index", "LoanStatement", FormMethod.Post, new { id = "frm" }))
    {
        <div class="box-body">
            
            <div class="row">
                <div class="col-sm-4">
                    <div class="form-group">
                        @Html.Label("Employee", new { @class = "control-label" }) <label class="required-field">*</label>
                        @Html.DropDownListFor(m => m.EmpId, Model.EmployeeListByEmpId, "Select One", new { @class = "form-controlForDDL required ddl" })
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-group">
                        @Html.Label("Loan No", new { @class = "control-label" }) <label class="required-field">*</label>
                        @Html.TextBoxFor(model => model.LoanNo, new { @class = "form-control required" })
                    </div>
                </div>
            </div> 
                   
        </div>
        <div class="box-footer">
            <button type="submit" id="btnSubmit" class="btn btn-primary"><i class="fa fa-search"></i> Preview</button>
        </div>
        <div class="form-group clearfix">
            <div class="col-md-12 col-lg-12">
                <iframe src="~/ReportViewers/MyReportViewer.aspx" width="100%" height="100%" style="border: none; min-height: 1500px;"></iframe>
            </div>
        </div>
    }
</div><!-- /.box -->

<script type="text/javascript">
    $(function () {
        $(".ddl").select2({
            //
            placeholder: {
                id: '-1', // the value of the option
                text: 'Select One'
            },
            allowClear: true
        });
        $("#btnSubmit").click(function () {
            return fnValidate()
        });
    });
</script>